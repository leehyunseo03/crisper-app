{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crisper-app",
  "version": "0.1.0",
  "identifier": "com.crisper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "crisper-app",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },    
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/llama-server"
    ],
    "resources": [
      "binaries/*.dll",
      "models/ggml-model-Q4_K_M.gguf",
      "models/qwen2.5-7b-instruct-q2_k.gguf"
    ]
  }
}